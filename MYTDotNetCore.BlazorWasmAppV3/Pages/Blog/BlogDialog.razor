@page "/blog-create"
@inject HttpClientService HttpClientService;
@inject IJSRuntime JsRuntime;
@using MudBlazor;
@using MudBlazor.Components
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.AddCircle" Class="mr-3 mb-n1" />Blog Create
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Value="@reqModel.BlogTitle" Label="Blog Title"/>
        <MudTextField Value="@reqModel.BlogAuthor" Label="Blog Author"/>
        <MudTextField Value="@reqModel.BlogContent" Label="Blog Content"/>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Success" OnClick="Save">Save</MudButton>
    </DialogActions>
</MudDialog>


