@model List<BlogModel>;
@{
    ViewData["Title"] = "Blog";
    int count = 0;
}

<h4>Blog</h4>

<a href="/BlogAjax/Create" class="btn btn-outline-info">New Blog</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Content</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (BlogModel blog in Model)
        {
            <tr>
                <th scope="row">@(++count)</th>
                <td>@blog.BlogTitle</td>
                <td>@blog.BlogAuthor</td>
                <td>@blog.BlogContent</td>
                <td>
                    <a href="/BlogAjax/Edit/@blog.BlogId" class="btn btn-warning">Edit</a>
                    <button type="button" class="btn btn-danger btn-delete" data-blog-id=@blog.BlogId>Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script>
        $(".btn-delete").click(function () {
            let id = $(this).data('blog-id');
            Swal.fire({
                title: "confirm",
                text: "Are you sure want to delete?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes"
            }).then((result) => {
                if (result.isConfirmed) {
                    deleteBlog(id)
                }
            });

        })

        function deleteBlog(id){
            let _reqModel = {
                BlogId: id
            }
            $.ajax({
                url: "/BlogAjax/Delete",
                data: { blog: _reqModel },
                type: "POST",
                dataType: "json",
                success: function (result) {
                    console.log(result)
                    if (result.Message) {
                        Swal.fire({
                            title: "Success.",
                            text: result.Message,
                            icon: "success",
                        }).then((result) => {
                            if (result.isConfirmed) {
                                location.href = "/BlogAjax"
                            }
                        });
                    } else {
                        Swal.fire({
                            title: "Error!.",
                            text: result.Message,
                            icon: "error",
                        })
                    }
                },
                error: function (errormessage) {
                    console.log(errormessage.responseText);
                }
            })
        }
    </script>
}
