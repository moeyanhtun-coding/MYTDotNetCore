@model BlogResponseModel;
@{
    int count = 0;
    int pageCount = Model.PageCount;
    int pageSize = Model.PageSize;
    int pageNo = Model.PageNo;

    string GetPageUrl(int pageNo)
    {
        return $"/BlogPagination/Index?pageNo={pageNo}&pageSize={pageSize}";
    }
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Content</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (BlogModel blog in Model.Data)
        {
            <tr>
                <th scope="row">@(++count)</th>
                <td>@blog.BlogTitle</td>
                <td>@blog.BlogAuthor</td>
                <td>@blog.BlogContent</td>
                <td>
                    <a href="/Blog/Edit/@blog.BlogId" class="btn btn-warning">Edit</a>
                    <a href="/Blog/Delete/@blog.BlogId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<nav aria-label="...">
    <ul class="pagination">
        @if (pageCount == 9)
        {
            for (int i = 1; i <= pageCount; i++)
            {
                if (pageNo == i)
                {
                    <li class="page-item active" aria-current="page">
                        <a class="page-link" href="@GetPageUrl(i)">@i</a>
                    </li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" href="@GetPageUrl(i)">3</a></li>
                }
            }
        }
    </ul>
</nav>
